<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.auth.login.LoginActivity"
    >

    <TextView
        android:id="@+id/label_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_login_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/label_login_title"
        app:layout_constraintStart_toStartOf="@id/label_login_title"
        app:layout_constraintEnd_toEndOf="@id/label_login_title"
        android:text="반려동물 되돌아家기 프로젝트"
        />

    <EditText
        android:id="@+id/et_login_id"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="아이디"
        android:paddingHorizontal="8dp"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_login_password"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingHorizontal="8dp"
        android:hint="비밀번호"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="@dimen/common_margin_vertical"
        android:singleLine="true"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_login_login"
        app:layout_constraintTop_toBottomOf="@id/et_login_id"
        />

    <TextView
        android:id="@+id/btn_login_login"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/common_margin_vertical"
        android:background="@color/colorPrimary"
        android:text="로그인"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_password"
        app:layout_constraintStart_toStartOf="@id/et_login_password"
        app:layout_constraintEnd_toEndOf="@id/et_login_password"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorDividerGray"
        app:layout_constraintTop_toTopOf="@id/btn_login_sign_up"
        />

    <TextView
        android:id="@+id/btn_login_sign_up"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="계정이 없으신가요? 가입하기"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>